{a}(*tmp*)
stream_foreach(xs, fwork) =

(
//
case+ !xs of
| stream_nil() => ()
| stream_cons(x, xs) =>
  (fwork(x); stream_foreach<a>(xs, fwork))
//
) (* end of [stream_foreach] *)
